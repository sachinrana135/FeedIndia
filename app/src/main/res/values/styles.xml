<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen" parent="Theme.MaterialComponents.NoActionBar"/>

    <style name="BlackText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WhiteText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Map" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#C51162</item>
        <item name="colorAccent">#FBC02D</item>
        <item name="colorControlActivated">#E91E63</item>
    </style>
</resources>
